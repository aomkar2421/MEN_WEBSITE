<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Gallery & Product Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="shortcut icon" href="static/images/favicon.png" type="image/x-icon">

</head>

<body class="bg">
  <div class="container-fluid mb-5 glass-main">

    {{>navbar data=details}}

    <div class="container glass py-3" style="margin-top: 100px;">
      <h1 class=" text-center mb-3">GALLERY</h1>

      <div class="row flex flex-wrap justify-content-evenly">
        {{#each image}}
        <div class="col-md-6 col-lg-4 mb-4">
          <img src={{this.image}} class="w-full rounded-3" alt="">
          <h5 class="text-center mt-2">{{this.description}}</h5>
        </div>
        {{/each}}
      </div>

    </div>

    <div class="container mt-5 py-3  glass">

      <h1 class=" text-center mb-3">PRODUCTS</h1>

      <div class="row flex flex-wrap justify-content-evenly">
        {{#each product}}
        <div class="col-sm-6 col-md-4 col-lg-3 ">
          <img src={{this.image}} class="w-full rounded-2" alt="">
          <h5 class="text-center mt-2 mb-5">{{this.description}}</h5>
        </div>
        {{/each}}
      </div>

    </div>

  </div>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

</body>

</html>