<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Baker's Delight</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css"
    integrity="sha512-BnbUDfEUfV0Slx6TunuB042k9tuKe3xrD6q4mg5Ed72LTgzDIcLPxg6yI2gcMFRyomt+yJJxE+zJwNmxki6/RA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="static/css/style.css">
  <link rel="shortcut icon" href="static/images/favicon.png" type="image/x-icon">
</head>

<body class="bg">

  <div class="glass-main">
    {{!=================== NAVBAR ======================}}
    {{>navbar details=details}}


    {{!=================== SLIDER ======================}}
    {{>slider slider=slider}}


    {{!=================== DUMMY SECTION START ======================}}
    <div class="container-fluid text-center glass-black mt-4 py-5 text-white">
      <h2>Handcrafted Delights & Community Gatherings</h2>
      <p>Naturally leavened breads, European-inspired pastries, and locally sourced ingredients, all crafted with love
        in West Asheville, NC. Join us for a warm and welcoming experience where food and community come together</p>
      <input type="button" class="btn btn-primary" value="Learn More">
    </div>
    {{!=================== DUMMY SECTION END ======================}}



    {{!=================== SERVICE SECTION START ======================}}
    <section id="services">
      <div class="container">
        <h1 class="my-5 text-center">
          Special Orders, Cakes, & Weddings

        </h1>

        <div class="row">

          {{#each service}}
          <div class="col-12 col-md-6 col-lg-4 h-auto mb-3">

            <div class="card h-full mt-6">

              <div class="card-body h-full">
                <div class="container text-center">
                  {{!-- <i class=" {{this.icon}} service-txt"></i> --}}
                  <img src={{this.icon}} alt="" class="h-32">
                </div>
                <h3 class="card-title">{{this.title}}</h3>
                <p>{{this.description}}</p>
                <a href="{{this.link}}">{{this.linkText}}</a>
                <a href="#" class="ms-4">Connect</a>
              </div>

            </div>

          </div>
          {{/each}}
        </div>

      </div>
    </section>
    {{!=================== SERVICE SECTION END ======================}}



    {{!=================== LOCATION SECTION START ======================}}
    <div class="container-fluid my-5">
      <div class="row">
        <div class="col-lg-7 col-12 bg-gray-400 overflow-x-hidden overflow-y-scroll" style="height: 500px;">
          <h1 class="text-center my-3">LOCATION</h1>

          {{#each location}}
          <div class="bg-gray-400 h-auto d-flex flex-row w-100 py-3">
            <div class="border-end px-4">
              <h3>{{this.city}}</h3>
              <p>{{this.optional}}</p>
            </div>

            <div class="text-break py-4 px-5">
              <h6>{{this.location}}</h6>
            </div>
          </div>
          {{/each}}

        </div>

        <div class="col-lg-5 d-none d-lg-block" id="img">
          <img src="static/images/location.webp" class="w-100" style="height: 500px;" alt="">
        </div>
      </div>
    </div>



    {{!=================== LOCATION SECTION END ======================}}


    {{!=================== BANNER SECTION START ======================}}
    {{#each banner}}
    <div class="container py-3">
      <div class="row">
        {{#if (even @index)}}
        <div class="col-md-6 d-flex justify-content-center">
          <img src="{{this.imgUrl}}" style="height: 250px;" class="img-fluid" alt="">
        </div>
        <div class="col-md-6 pt-5">
          <h2>{{this.title}}</h2>
          <p>{{this.subtitle}}</p>
        </div>
        {{else}}
        <div class="col-md-6 pt-5">
          <h2>{{this.title}}</h2>
          <p>{{this.subtitle}}</p>
        </div>
        <div class="col-md-6 d-flex justify-content-center">
          <img src="{{this.imgUrl}}" style="height: 250px;" class="img-fluid" alt="">
        </div>
        {{/if}}
      </div>
    </div>
    {{/each}}
    {{!=================== BANNER SECTION END ======================}}



    {{!=================== CONTACT SECTION START ======================}}
    <section class="bg-contact bg-dark container-fluid my-5 py-5 text-white" id="contact">
      <div class="row">
        <div class="col-md-8 mx-auto">
          <h2 class="text-center">Contact Us</h2>
          <form action="/process-form" method="post">
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">Email address</label>
              <input type="email" name="email" class="form-control" id="exampleFormControlInput1"
                placeholder="name@example.com">
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">Phone Number</label>
              <input type="text" name="phone" class="form-control" id="exampleFormControlInput1"
                placeholder="xxxxx xxxxx">
            </div>
            <div class="mb-3">
              <label for="subject" class="form-label">Subject</label>
              <input type="text" name="subject" class="form-control" id="subject" placeholder="Enter your subject">
            </div>

            <div class="mb-3">
              <label for="exampleFormControlTextarea1" class="form-label">Your Query</label>
              <textarea class="form-control" name="query" id="exampleFormControlTextarea1" rows="9"></textarea>
            </div>
            <div class="text-center">
              <input type="submit" class="btn btn-primary" name="" id="">
            </div>
          </form>
        </div>
      </div>
    </section>
    {{!=================== CONTACT SECTION END ======================}}



    {{!=================== ABOUT SECTION START ======================}}
